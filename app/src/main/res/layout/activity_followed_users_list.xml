<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grizzly.keepup.following.FollowedUsersList"
    android:background="@color/colorPrimary">

    <FrameLayout
        android:id="@+id/following_devide_frame_news"
        android:layout_width="match_parent"
        android:layout_height="@dimen/notification_bar_height"
        android:background="@color/colorPrimary" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/following_devide_frame_news"
        android:id="@+id/followed_result_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No followed users."
        android:layout_centerVertical="true"
        android:id="@+id/no_followed_search"
        android:textSize="@dimen/middle_text_height"
        android:textColor="@color/text_light"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>
