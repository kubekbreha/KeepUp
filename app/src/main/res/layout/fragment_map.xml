<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </com.google.android.gms.maps.MapView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_map"
        style="@style/MyCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:layout_alignBottom="@+id/new_run_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/vertical_line_map"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="80dp"
                android:background="#000000" />


            <View
                android:id="@+id/horizontal_line_map"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="172dp"
                android:background="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/map_meters_traveled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_marginLeft="188dp"
                android:layout_alignStart="@+id/vertical_line_map"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/map_time_traveled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/vertical_line_map"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="188dp"
                android:text="00:00"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/new_run_button"
        android:layout_width="160dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="114dp"
        android:background="@drawable/button_background_gradient"
        android:clickable="true"
        android:focusable="true"
        android:text="Start"
        android:textColor="#ffff"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>