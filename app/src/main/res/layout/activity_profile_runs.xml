<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.grizzly.keepup.search.ProfileRuns">



    <RelativeLayout
        android:id="@+id/profile_picture"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:background="@color/colorPrimaryDark">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_fragment_image"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/default_profile" />


        <TextView
            android:id="@+id/profile_activity_fragment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/profile_fragment_image"
            android:text="TextView"
            android:textColor="@color/text_light"
            android:textSize="@dimen/middle_text_height"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_activity_fragment_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/profile_activity_fragment_name"
            android:layout_below="@+id/profile_activity_fragment_name"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textColor="@color/text_light"
            android:textSize="@dimen/small_text_height" />

            </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="104dp"
        android:background="@color/colorPrimary"
        >


        <android.support.v7.widget.RecyclerView
            android:id="@+id/profile_activity_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:divider="@null"
            android:dividerHeight="0dp" />

    </RelativeLayout>

</RelativeLayout>
