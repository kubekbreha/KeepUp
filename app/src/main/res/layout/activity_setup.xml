<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grizzly.chat.login.SetupActivity">


    <ImageButton
        android:id="@+id/profile_image_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/setup_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/black" />


    <EditText
        android:id="@+id/setup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="165dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Enter your name"
        tools:ignore="TextFields"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="188dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/submit_setup"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@color/groupChatAdminText"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:text="submit"
        app:theme="@style/AppTheme.ButtonStyle"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="57dp" />

</RelativeLayout>
