<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grizzly.keepup.login.SetupActivity"
    android:id="@+id/setup_gradient"
    android:background="@drawable/background_gradient_anim">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/setup_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp"
        android:src="@drawable/default_profile" />



    <EditText
        android:id="@+id/setup_name"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/rounded_input"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="165dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:hint="Enter your name"
        tools:ignore="TextFields"
        android:paddingLeft="16dp"
        android:textColor="#ffffff"
        android:textColorHint="#cecece"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/submit_setup"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_background"
        android:text="submit"
        android:textColor="#000000"/>

</RelativeLayout>
