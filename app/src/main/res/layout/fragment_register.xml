<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_anim"
    tools:context="com.grizzly.keepup.login.fragment.RegisterFragment"
    android:id="@+id/register_gradient">


    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_above="@+id/edit_password"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_input"
        android:hint="Email"
        android:paddingLeft="@dimen/button_padding"
        android:textColor="@color/text_light"
        android:textColorHint="@color/text_gray" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_above="@+id/confirm_register_button"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_input"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/button_padding"
        android:textColor="@color/text_light"
        android:textColorHint="@color/text_gray"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/confirm_register_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="207dp"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_background"
        android:elevation="0dp"
        android:text="@string/register" />

</RelativeLayout>
